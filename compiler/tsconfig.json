{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "sourceMap": true,
      "baseUrl": ".",
      "outDir": "dist",
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": [
        "webpack-env",
        "node",
        "jest"
      ],
      "paths": {
        "@/*": [
          "src/*"
        ],
        "~/*": [
          "./*"
        ]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "tests/**/*.ts",
      "tests/**/*.tsx"
    ],
    "exclude": [
      "node_modules",
      "components"
    ]
  }
  